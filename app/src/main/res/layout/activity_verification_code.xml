<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">
    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:src="@drawable/mail"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verification Code"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="21dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="OTP has been sent to your mobile"
            android:textColor="#999797"
            android:gravity="center"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="number. Please verify"
            android:textColor="#999797"
            android:gravity="center"
            android:textSize="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin2"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="60dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:textSize="25dp"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:maxLength="1"
            android:singleLine="true"
            android:textAlignment="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:textSize="25dp"
            android:maxLength="1"
            android:textAlignment="center"
            android:singleLine="true"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:textSize="25dp"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:maxLength="1"
            android:singleLine="true"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:textSize="25dp"
            android:layout_weight="1"
            android:background="#d3d3d3"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            android:layout_marginRight="15dp"
            android:maxLength="1"
            android:textAlignment="center"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#1c25a3"
            android:text="Resend in 30 Sec"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/lin4"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <Button
            android:id="@+id/sendotp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"

            android:layout_marginRight="40dp"
            android:background="@drawable/butt1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:text="VERIFY"
            android:textColor="#fff"
            android:textSize="25dp" />
    </LinearLayout>
</RelativeLayout>
