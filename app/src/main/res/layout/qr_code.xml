<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_pop_lay_new"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:id="@+id/qrback"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_qrcodeback" />

    <RelativeLayout
        android:id="@+id/text"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/headtxt"
            android:fontFamily="@font/ubuntu"
            android:text="@string/shareqrtxt"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/headtxt"
            android:fontFamily="@font/ubuntu"
            android:text="@string/validitycode"
            android:textSize="13sp" />

    </RelativeLayout>

    <TextView
        android:layout_below="@+id/text"
        android:id="@+id/codetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbordercolor"
        android:layout_marginTop="10sp"
        android:paddingLeft="40sp"
        android:visibility="visible"
        android:paddingRight="40sp"
        android:fontFamily="@font/ubuntu"
        android:layout_centerHorizontal="true"
        android:paddingTop="6sp"
        android:textStyle="bold"
        android:paddingBottom="6sp"
        android:textColor="#000" />

    <ImageView
        android:id="@+id/qrcodeicon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/codetxt"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/qrcodeimg"/>

    <LinearLayout
        android:layout_below="@+id/qrcodeicon"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/btnborder"
        android:layout_marginBottom="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/Share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHARE"
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:fontFamily="@font/ubuntu"
            android:drawableLeft="@drawable/ic_share_black_24dp"
            android:drawablePadding="5dp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>